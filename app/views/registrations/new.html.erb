<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for :registration, url: registrations_path, html: { class: 'form-signin', role: 'form' } do |f| %>
      <h2 class="form-signin-header">Singn up</h2>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Your name' %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email address' %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm password' %><br>
        <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>