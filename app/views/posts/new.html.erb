<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1>New post</h1>
    <%= form_for :post, url: posts_path, html: { class: 'form', role: 'form' } do |form| %>
      <div class="form-group">
        <%= form.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
        <%= form.text_area :body, class: 'form-control', placeholder: 'Enter description' %><br>
        <%= form.submit 'Save', class: 'btn btn-lg btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>