<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for :session, url: login_path, html: { class: 'form-signin', role: 'form' } do |f| %>
      <h2 class="form-signin-header">Sign in</h2>
      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email address' %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %><br>
        <%= f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>
      </div>
    <% end -%>
  </div>
</div>